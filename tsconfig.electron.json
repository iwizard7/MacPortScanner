{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "./build/dist",
    "noEmit": false
  },
  "include": [
    "src/main.ts",
    "src/preload.ts"
  ],
  "exclude": [
    "src/App.tsx",
    "src/components/**/*",
    "src/main.tsx",
    "node_modules",
    "build",
    "dist"
  ]
}